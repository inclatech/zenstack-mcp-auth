{
    "compilerOptions": {
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
